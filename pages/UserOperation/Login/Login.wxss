/*  定义一个容器  */
.main{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
/* 笑脸图片  */
.smile image{
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx 10rpx;
}
/* 文本数据一 */
.text1{
  width: 100%;
  height: 50rpx;
  font-size: 40rpx;
  font-weight: bold;
  margin: 10rpx 10rpx;
}
/* 文本数据二 */
.text2{
  width: 100%;
  height: 50rpx;
  font-size:30rpx;
  margin: 10rpx 10rpx;
}
/* 内容部分处 */
.circular{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  height: 410rpx;
  margin-top: 100rpx;
}
/* 拍完照后的尺寸 */
.circular image{
  width:400rpx;
  height:400rpx;
  border-radius: 50%;
}
/* 相机在此  */
.camera{
   width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  padding-top: 140rpx;
}
/* 相机大小设置 */
.camera image{
  width:150rpx;
  height:150rpx;
}
/* 相机按钮设置 */
.okbut{
  width: 400rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1rpx solid #000;
}
/* 相机按钮文字属性设置 */
.camera text{
  width: 400rpx;
  height: 100rpx;
  align-content: center;
  line-height: 100rpx;
}